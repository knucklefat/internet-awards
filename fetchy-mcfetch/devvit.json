{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "fetchy-mcfetch",
  "permissions": {
    "reddit": {},
    "redis": true,
    "http": {
      "enable": true,
      "domains": ["reddit.com", "www.reddit.com", "redd.it"]
    }
  },
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "splash.html",
        "height": "tall",
        "inline": true
      },
      "main": {
        "entry": "index.html",
        "height": "tall"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "The Internet Awards - Nominations",
        "description": "Submit and view nominations for The Internet Awards",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "internetawards_dev"
  }
}
